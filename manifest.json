{
    "name": "With Pride",
    "version": "0.1.0",
    "description": "Support LGBTQ+ friendly businesses online",
    "permissions": [
        "declarativeContent",
        "activeTab"
    ],
    "manifest_version": 2,
    "background": {
        "scripts": [
            "data.js",
            "background.js"
        ],
        "persistent": false
    },
    "options_page": "about.html",
    "browser_action": {
        "default_icon": {
            "16": "assets/icon/icon16.png",
            "32": "assets/icon/icon32.png",
            "48": "assets/icon/icon48.png",
            "128": "assets/icon/icon128.png"
        },
        "default_title": "With Pride",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "assets/icon/icon16.png",
        "32": "assets/icon/icon32.png",
        "48": "assets/icon/icon48.png",
        "128": "assets/icon/icon128.png"
    }
}